\newcommand{\fig}[3]{
  \begin{figure*}[!htp]
  \centering
  \includegraphics[scale=#2]{images/#1.png}
  \ifthenelse{\equal{#3}{}}{}{\caption{#3}}
  \ifthenelse{\equal{#1}{}}{}{\label{fig:#1}}
  \end{figure*}
}
\newcommand{\tikzfig}[3]{
  \begin{figure*}[!htp]
  \centering
  #2
  \ifthenelse{\equal{#3}{}}{}{\caption{#3}}
  \ifthenelse{\equal{#1}{}}{}{\label{fig:#1}}
  \end{figure*}
}
\newcommand{\tbl}[4]{
{
  \renewcommand{\arraystretch}{1.5}
  \renewcommand{\tabcolsep}{0.2cm}
  \ifthenelse{\equal{#4}{}}{}{\begin{table*}[!htp]}
  \begin{center}
  \begin{tabular}{#2}
  \hline #3 \hline
  \end{tabular}
  \ifthenelse{\equal{#4}{}}{}{\caption{#4}}
  \ifthenelse{\equal{#1}{}}{}{\label{tbl:#1}}
  \end{center}
  \ifthenelse{\equal{#4}{}}{}{\end{table*}}
}
}

